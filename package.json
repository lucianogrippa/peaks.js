{
  "name": "peaks.js",
  "version": "0.23.23-LUC",
  "description": "JavaScript UI component for displaying audio waveforms",
  "main": "./peaks.js",
  "types": "./peaks.js.d.ts",
  "files": [
    "peaks.js",
    "peaks.js.d.ts",
    "src"
  ],
  "contributors": [
    "Chris Finch (https://github.com/chrisfinch)",
    "Thomas Parisot (https://github.com/oncletom)",
    "Chris Needham (https://github.com/chrisn)"
  ],
  "keywords": [
    "audio",
    "visualisation",
    "bbc",
    "webaudio",
    "browser",
    "interactive",
    "waveform"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/bbc/peaks.js.git"
  },
  "license": "LGPL-3.0",
  "engines": {
    "node": ">= 8.11.2"
  },
  "scripts": {
    "build:browserify": "browserify -d -e ./src/main.js -t deamdify -s peaks | exorcist ./build/peaks.bro.js.map | derequire - > ./build/peaks.bro.js",
    "build:dev": "npm run build:browserify && set NODE_ENV=development && webpack && npm run postbuild",
    "build": "set NODE_ENV=production && webpack",
    "build:demo": "set NODE_ENV=development && webpack && npm run postbuild",
    "postbuild": "copyfiles peaks.js.d.ts ./build/peaks.js ./build/peaks.js.map ./build/peaks.bro.js ./build/peaks.bro.js.map ./demo &&  copyfiles  peaks.js.d.ts ./build/peaks.js ./build/peaks.js.map ../audiocut-editor-player/editor-source/libs/peaks.js/",
    "doc": "jsdoc --private --destination docs --recurse src",
    "lint": "eslint --fix src/*.js test/**/*.js test/*.js karma.conf.js",
    "pretest": "npm run build",
    "test": "karma start",
    "test-watch": "npm test -- --auto-watch --no-single-run",
    "copy-demo-files": "copyfiles test_data/sample.mp3 test_data/07023003.mp3 test_data/07023003-2channel.dat demo",
    "prestart": "npm run build:dev && npm run copy-demo-files",
    "start": "serve --listen 8000 --no-clipboard demo",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "babel-loader": "^8.2.2",
    "browserify": "~17.0.0",
    "browserify-istanbul": "~3.0.1",
    "chai": "~4.2.0",
    "copyfiles": "~2.4.1",
    "deamdify": "~0.3.0",
    "derequire": "~2.1.1",
    "eslint": "^7.19.0",
    "exorcist": "^2.0.0",
    "jsdoc": "~3.6.6",
    "karma": "^6.3.2",
    "karma-browserify": "~8.0.0",
    "karma-browserstack-launcher": "~1.6.0",
    "karma-chai-sinon": "~0.1.5",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-firefox-launcher": "~2.1.0",
    "karma-html2js-preprocessor": "~1.1.0",
    "karma-mocha": "~2.0.1",
    "karma-safari-launcher": "~1.0.0",
    "karma-spec-reporter": "~0.0.32",
    "mocha": "~8.2.1",
    "serve": "~11.3.2",
    "sinon": "~9.2.4",
    "sinon-chai": "~3.5.0",
    "watchify": "~4.0.0",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "colors.css": "~3.0.0",
    "eventemitter3": "~4.0.7",
    "konva": "^7.2.5",
    "waveform-data": "git+https://github.com/lucianogrippa/waveform-data.js.git"
  }
}
